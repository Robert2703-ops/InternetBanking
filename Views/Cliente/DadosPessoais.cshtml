@model TrabalhoJoseInternetBanking2.Models.ClienteCorrentista

@{
    ViewData["Title"] = "DadosPessoais";
}

<div class="row">
    <div class="col-md-4">
        <form action="DadosPessoais">
            <div asp-validation-summary="ModelOnly" class="text-danger">
                <div class="form-group">
                    <label for="Nome" class="control-lable"></label>
                    <input asp-for="Nome" class="form-control"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Idade" class="control-lable"></label>
                    <input asp-for="Idade" class="form-control"/>
                    <span asp-validation-for="Idade" class="text-danger"></span>
                </div>
                <div>
                    <input type="submit" value="criar" class="btn btn-primary">
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}